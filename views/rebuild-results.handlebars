<!-- views/rebuild-results.handlebars -->
<h1>{{title}}</h1>

<div class="display-mode">
  <label for="displayToggle">Visa mänskligt läsbara etiketter:</label>
  <label class="switch">
    <input type="checkbox" id="displayToggle" {{#if showLabels}}checked{{/if}}>
    <span class="slider"></span>
  </label>
  <span class="display-mode-text">{{#if showLabels}}På{{else}}Av{{/if}}</span>
</div>

<div class="results-summary">
  <div class="info-box">
    <h3>Produktindexet har uppdaterats</h3>
    <p>Återuppbyggnaden har identifierat <strong>{{count}} produkter</strong> i databasen.</p>
    <p>Tidpunkt: {{timestamp}}</p>
  </div>
</div>

<h2>Identifierade produkter</h2>

<div class="filter-panel">
  <input type="text" id="productFilter" placeholder="Filtrera produkter..." class="form-control">
</div>

<div class="product-stats">
  <div class="stat-box">
    <div class="stat-number">{{count}}</div>
    <div class="stat-label">Totalt antal produkter</div>
  </div>
  
  <div class="stat-box">
    <div class="stat-number">{{products.[0].isNotor}}</div>
    <div class="stat-label">Notor-produkter</div>
  </div>
  
  <div class="stat-box">
    <div class="stat-number">{{products.[0].notNotor}}</div>
    <div class="stat-label">Andra produkter</div>
  </div>
</div>

<div class="product-grid">
  {{#each products}}
    <div class="product-card product-row" data-uri="{{this.uri}}" data-name="{{this.name}}">
      <div class="product-card-header">
        <h3>
          <a href="/product/detail?uri={{encodeURIComponent this.uri}}&showLabels={{../showLabels}}">
            {{this.name}}
          </a>
        </h3>
      </div>
      <div class="product-card-body">
        {{#if this.description}}
          <p class="description">{{truncate this.description 120}}</p>
        {{else}}
          <p class="description"><em>Ingen beskrivning tillgänglig</em></p>
        {{/if}}
        
        <div class="product-meta">
          {{#if this.isNotor}}
            <span class="product-tag notor-tag">Notor65</span>
          {{else}}
            <span class="product-tag generic-tag">Generisk</span>
          {{/if}}
          <code class="product-uri">{{truncate this.uri 30}}</code>
        </div>
      </div>
    </div>
  {{/each}}
  
  {{#unless products.length}}
    <div class="no-data-message">
      <p>❌ Inga produkter hittades i databasen.</p>
      <p>Detta kan bero på att:</p>
      <ul>
        <li>Databasen innehåller inga entiteter med produktegenskaper</li>
        <li>Produkterna använder en annan terminologi än vad som förväntas</li>
        <li>Det finns ett problem med detektionsalgoritmen</li>
      </ul>
    </div>
  {{/unless}}
</div>

<div class="action-links">
  <a href="/ontology/debug-products?showLabels={{showLabels}}" class="btn">Visa produktlistan</a>
  <a href="/?showLabels={{showLabels}}" class="btn">Tillbaka till startsidan</a>
</div>

<script>
  // Client-side filtering functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterInput = document.getElementById('productFilter');
    
    if (filterInput) {
      filterInput.addEventListener('input', function() {
        const filterValue = this.value.toLowerCase();
        const cards = document.querySelectorAll('.product-row');
        
        cards.forEach(card => {
          const uri = card.dataset.uri.toLowerCase();
          const name = card.dataset.name.toLowerCase();
          
          if (uri.includes(filterValue) || name.includes(filterValue)) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      });
    }
  });
</script>

